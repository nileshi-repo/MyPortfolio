@page
@model MyPortfolioProject.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Validation Page";
}

<div class="container-fluid px-2">
    <h1 class="display-4 text-center pb-4">Validation</h1>
    <div class="container border py-4 d-flex flex-column align-items-center">
        <p class="pb-2">
            Some pages are not publically accessible.
            <br class="d-md-none d-block" />
            Please enter passphrase to view contents of this page.
        </p>
        <form method="post" class="d-flex flex-column align-items-center">
            <div class="pb-2">
                <div class="form-group row">
                    <input type="password" asp-for="Credential.Passphrase" class="form-control" autofocus/>
                </div>
                <div class="p-2">
                    <span class="text-danger" asp-validation-for="Credential.Passphrase"></span>
                    <div class="text-danger text-center">@Model.Message</div>
                </div>
            </div>
            <div class="form-group pb-4">
                <input type="submit" class="btn-primary btn-primary" value="Submit" />
            </div>
        </form>
    </div>
</div>